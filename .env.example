# Configuration de la base de données MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0

# Configuration du serveur
PORT=3001

# Secret pour JWT (générez une clé sécurisée)
JWT_SECRET=your-super-secret-jwt-key

# Configuration SMTP pour l'envoi d'emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration de l'application
APP_NAME=CINEHOME
FRONTEND_URL=http://localhost:8000

# Durée de validité du code de récupération (en minutes)
RESET_CODE_EXPIRY=10